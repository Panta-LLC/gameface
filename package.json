{
  "name": "gameface-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "npm@10.8.1",
  "scripts": {
    "bootstrap": "npm install",
    "dev": "concurrently -n api,signaling,web -c blue,magenta,green \"npm:dev:api\" \"npm:dev:signaling\" \"npm:dev:web\"",
    "dev:api": "npm run -w @gameface/api dev",
    "dev:signaling": "npm run -w @gameface/signaling dev",
    "dev:web": "npm run -w @gameface/web dev",
    "build": "npm run -ws build --if-present",
    "test": "npm run -ws test --if-present",
    "lint": "npm run -ws lint --if-present",
    "format": "npm run -ws format --if-present",
    "typecheck": "npm run -ws typecheck --if-present",
    "verify:dev": "node scripts/dev-check.mjs",
    "commit": "cz",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.3.0",
    "@eslint/js": "^9.15.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/redis": "^4.0.10",
    "@types/testing-library__react": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "commitizen": "^4.3.0",
    "concurrently": "^9.0.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.11.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-unused-imports": "^4.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.5",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.8.0",
    "vitest": "^1.6.0",
    "ws": "^8.18.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  }
}
